<%= form_for(endorsement) do |f| %>
  <% if endorsement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(endorsement.errors.count, "error") %> prohibited this endorsement from being saved:</h2>

      <ul>
      <% endorsement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="formstuff">
      <%= f.label :name %>
      <br>
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="field">
    <div class="formstuff">
      <%= f.label :descriptor, "Title" %>
      <br>
      <%= f.text_field :descriptor %>
    </div>
  </div>

  <div class="field">
    <div class="formstuff">
      <%= f.label :endorsement_message %>
      <br>
      <%= f.text_area :endorsement_message, size: '40' %>
    </div>
  </div>
  <% if user_signed_in? %>
    <div class="field">
      <%= f.label :approved %>
      <%= f.check_box :approved %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
