<p id="notice"><%= notice %></p>

<h3 class="cntrtitle">Endorsements</h3>

<% @endorsements.where(:approved => true).each do |endorsement| %>
  <div class="row">
    <div class="col-xl-1 col-lg-1 col-md-1 col-sm-1 col-xs-1"></div>
    <div class="col-xl-8 col-lg-8 col-md-10 col-sm-10 col-xs-10">
      <p class="quote">"<%= endorsement.endorsement_message %>"</p>
      <p class="quoter">- <%= endorsement.name %>, <%= endorsement.descriptor %></p>
    </div>
    <div class="col-xl-1 col-lg-1 col-md-1 col-sm-1 col-xs-1"></div>
  </div>
  <br>
<% end %>
<% if user_signed_in? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Title</th>
        <th>Endorsement message</th>
        <th>Approved</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @endorsements.each do |endorsement| %>
        <tr>
          <td><%= endorsement.name %></td>
          <td><%= endorsement.descriptor %></td>
          <td><%= endorsement.endorsement_message %></td>
          <td><%= endorsement.approved %></td>
          <td><%= link_to 'Show', endorsement %></td>
          <td><%= link_to 'Edit', edit_endorsement_path(endorsement) %></td>
          <td><%= link_to 'Destroy', endorsement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

  <br>
<div id="endo">
  <%= link_to 'Endorse Nancy Eng', new_endorsement_path %>
</div>
